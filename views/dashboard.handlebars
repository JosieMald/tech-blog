<div class="card post-form container">
  <div class="card-body">
    <form class="new-post-form">
      <h5>Create New Post</h5>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="title" class="form-control title" id="postTitle">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Content</label>
        <textarea class="form-control" id="postText" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary postBtn">Create</button>
    </form>
  </div>
</div>

{{#each posts as |data|}}
<div class="card text-center mt-3 mb-3 container">
  <div class="card-body">
    <div class="container d-flex justify-content-between">
      <h5 class="card-title">{{data.title}}</h5>
      <div class="text-muted">
        Posted by {{data.user_id}} on {{dateFormat data.createdAt}}
      </div>
    </div>
    <p class="card-text">{{data.body}}</p>
  </div>
</div>
{{/each}}

<div class="text-center">
  <button class="btn btn-primary mt-2">Create New Post!</button>
</div>

<script src="/js/dashboard.js"></script>